<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane id="AnchorPane" stylesheets="@../../../styles/menu.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.learning.school.AddStudentController">
   <children>
      <VBox spacing="5.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <HBox spacing="5.0">
               <children>
                  <VBox prefHeight="50.0">
                     <children>
                        <Label prefHeight="25.0" prefWidth="148.0" text="Name" />
                        <TextField fx:id="tfName" prefHeight="25.0" prefWidth="94.0" />
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
                  <VBox prefHeight="50.0">
                     <children>
                        <Label prefHeight="25.0" prefWidth="148.0" text="Personal phone" />
                        <TextField fx:id="tfPhone" prefHeight="25.0" />
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
                  <VBox prefHeight="50.0">
                     <children>
                        <Label prefHeight="25.0" prefWidth="148.0" text="Parent`s phone" />
                        <TextField fx:id="tfPhoneParent" prefHeight="25.0" />
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
                  <VBox>
                     <children>
                        <Label prefHeight="25.0" text="Class" />
                        <ComboBox fx:id="cbClass" prefHeight="25.0" prefWidth="65.0" />
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <HBox />
            <Accordion />
         </children>
      </VBox>
      <HBox spacing="5.0" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <children>
            <Button fx:id="btnApply" mnemonicParsing="false" onMouseClicked="#btnAddClicked" text="Add" />
            <Button fx:id="btnCancel" mnemonicParsing="false" onMouseClicked="#btnCancelClicked" text="Cancel" />
         </children>
      </HBox>
   </children>
</AnchorPane>
