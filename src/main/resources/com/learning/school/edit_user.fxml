<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.learning.school.controller.EditUserController">
   <children>
      <HBox spacing="5.0" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="10.0">
         <children>
            <Button mnemonicParsing="false" onMouseClicked="#btnApplyClicked" text="Apply" />
            <Button mnemonicParsing="false" onMouseClicked="#btnCancelClicked" text="Cancel" />
         </children>
      </HBox>
      <HBox layoutX="10.0" layoutY="10.0" spacing="5.0" AnchorPane.bottomAnchor="35.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <VBox>
               <children>
                  <Label prefHeight="25.0" prefWidth="145.0" text="Login:" />
                  <TextField fx:id="tfLogin" prefHeight="25.0" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label prefHeight="25.0" prefWidth="145.0" text="Password:" />
                  <TextField fx:id="tfPassword" prefHeight="25.0" prefWidth="118.0" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@../../../styles/edit.css" />
      <URL value="@../../../styles/menu.css" />
   </stylesheets>
</AnchorPane>
